---
import { getIconBoxClasses } from "@phcdevworks/spectre-ui";
import type { IconBoxVariant, IconBoxSize } from "@phcdevworks/spectre-ui";

interface SpIconBoxProps {
  variant?: IconBoxVariant;
  size?: IconBoxSize;
  as?: "div" | "span";
  class?: string;
  [key: string]: any;
}

const {
  variant,
  size,
  as = "span",
  class: className,
  ...attrs
} = Astro.props as SpIconBoxProps;

const classes = getIconBoxClasses({ variant, size, className } as any);
const finalClass = className ? [classes, className].filter(Boolean).join(" ") : classes;
---

{
  as === "div" ? (
    <div class={finalClass} {...attrs}>
      <slot />
    </div>
  ) : (
    <span class={finalClass} {...attrs}>
      <slot />
    </span>
  )
}
