---
import {
  getCardClasses,
  type CardVariant,
  type CardRecipeOptions,
} from "@phcdevworks/spectre-ui";

export interface SpCardProps extends CardRecipeOptions {
  class?: string;
  as?: "div" | "section" | "article";
  [key: string]: any;
}

const { as = "div", class: extraClass = "", ...cardProps } =
  Astro.props as SpCardProps;

const { variant, interactive, padded, fullHeight, ...domProps } = cardProps;

const baseClasses = getCardClasses({
  variant,
  interactive,
  padded,
  fullHeight,
});

const classes = [baseClasses, extraClass].filter(Boolean).join(" ");
---

{as === "section" && (
  <section class={classes} {...domProps}>
    <slot />
  </section>
)}

{as === "article" && (
  <article class={classes} {...domProps}>
    <slot />
  </article>
)}

{as === "div" && (
  <div class={classes} {...domProps}>
    <slot />
  </div>
)}
