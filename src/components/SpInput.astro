---
import {
  getInputClasses,
  type InputState,
  type InputSize,
} from "@phcdevworks/spectre-ui";

export interface SpInputProps {
  state?: InputState;
  size?: InputSize;
  fullWidth?: boolean;
  class?: string;
  id?: string;
  name?: string;
  type?: string;
  value?: string;
  placeholder?: string;
  [key: string]: any;
}

const {
  class: extraClass = "",
  type = "text",
  ...inputProps
} = Astro.props as SpInputProps;

const { state, size, fullWidth, ...domProps } = inputProps;

const baseClasses = getInputClasses({ state, size, fullWidth });
const classes = [baseClasses, extraClass].filter(Boolean).join(" ");
---

<input class={classes} type={type} {...domProps} />
