---
import {
  getInputClasses,
  type InputState,
  type InputSize,
} from "@phcdevworks/spectre-ui";

let inputIdCounter = 0;
const createInputId = () => {
  inputIdCounter += 1;
  return `sp-input-${inputIdCounter}`;
};

export interface SpInputProps {
  state?: InputState;
  size?: InputSize;
  fullWidth?: boolean;
  label?: string;
  errorMessage?: string;
  helperText?: string;
  class?: string;
  id?: string;
  name?: string;
  type?: string;
  [key: string]: any;
}

const {
  state = "default",
  size = "md",
  fullWidth = false,
  label,
  errorMessage,
  helperText,
  class: extraClass = "",
  id,
  type = "text",
  ...rest
} = Astro.props as SpInputProps;

const baseId = id ?? createInputId();
const helperId = helperText ? `${baseId}-helper` : undefined;
const showError = state === "error" && Boolean(errorMessage);
const errorId = showError ? `${baseId}-error` : undefined;
const describedBy = [helperId, errorId].filter(Boolean).join(" ") || undefined;

const baseClasses = getInputClasses({ state, size, fullWidth });
const classes = [baseClasses, extraClass].filter(Boolean).join(" ");
---

<div class="sp-input-wrapper">
  {label && (
    <label class="sp-label" for={baseId}>
      {label}
    </label>
  )}

  <input
    id={baseId}
    class={classes}
    type={type}
    aria-invalid={showError ? "true" : undefined}
    aria-describedby={describedBy}
    {...rest}
  />

  {showError && (
    <p class="sp-error-message" id={errorId}>
      {errorMessage}
    </p>
  )}

  {helperText && (
    <p class="sp-helper-text" id={helperId}>
      {helperText}
    </p>
  )}
</div>
