---
import {
  getButtonClasses,
  type ButtonVariant,
  type ButtonSize,
} from "@phcdevworks/spectre-ui";

export interface SpButtonProps {
  variant?: ButtonVariant;
  size?: ButtonSize;
  fullWidth?: boolean;
  loading?: boolean;
  disabled?: boolean;
  iconOnly?: boolean;
  as?: "button" | "a" | "span";
  href?: string;
  target?: "_self" | "_blank" | "_parent" | "_top";
  rel?: string;
  type?: "button" | "submit" | "reset";
  class?: string;
  [key: string]: any;
}

const {
  variant = "primary",
  size = "md",
  fullWidth = false,
  loading = false,
  disabled = false,
  iconOnly = false,
  as = "button",
  href,
  target,
  rel,
  type = "button",
  class: extraClass = "",
  ...rest
} = Astro.props as SpButtonProps;

const baseClasses = getButtonClasses({
  variant,
  size,
  fullWidth,
  disabled,
  loading,
  iconOnly,
});

const classes = [baseClasses, extraClass].filter(Boolean).join(" ");
const ariaBusy = loading ? "true" : undefined;
---

{as === "a" && !disabled && (
  <a
    class={classes}
    href={href}
    target={target}
    rel={rel}
    aria-busy={ariaBusy}
    {...rest}
  >
    <slot />
  </a>
)}

{as === "a" && disabled && (
  <a
    class={classes}
    aria-disabled="true"
    aria-busy={ariaBusy}
    tabindex="-1"
    {...rest}
  >
    <slot />
  </a>
)}

{as === "button" && (
  <button
    class={classes}
    type={type}
    disabled={disabled}
    aria-busy={ariaBusy}
    {...rest}
  >
    <slot />
  </button>
)}

{as === "span" && (
  <span
    class={classes}
    aria-disabled={disabled ? "true" : undefined}
    aria-busy={ariaBusy}
    {...rest}
  >
    <slot />
  </span>
)}
