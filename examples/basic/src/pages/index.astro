---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SpButton, SpCard, SpInput } from "@phcdevworks/spectre-ui-astro";
---

<BaseLayout>
  <div class="page">
    <header class="page__header">
      <div>
        <p class="eyebrow">Spectre UI Astro</p>
        <h1>Welcome back</h1>
      </div>
      <SpButton variant="primary" as="a" href="https://astro.build/">
        Get Started
      </SpButton>
    </header>

    <SpCard variant="base" class="auth-card">
      <h2>Sign in to your dashboard</h2>
      <form class="auth-form" aria-label="Sign in form">
        <SpInput
          label="Email address"
          type="email"
          placeholder="you@example.com"
          helperText="Use the email associated with your Spectre account."
          required
        />

        <SpInput
          label="Password"
          type="password"
          state="invalid"
          errorMessage="Password must be at least 8 characters."
          placeholder="••••••••"
          required
        />

        <SpButton variant="primary" type="submit" class="sp-btn--full">
          Sign In
        </SpButton>
      </form>
    </SpCard>
  </div>
</BaseLayout>

<style>
  .page {
    width: min(100%, 48rem);
    display: grid;
    gap: 2.5rem;
  }

  .page__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .page__header h1 {
    margin: 0.25rem 0 0;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin: 0;
    font-size: 0.85rem;
    color: #cbd5f5;
  }

  .auth-card {
    display: grid;
    gap: 1.5rem;
    width: min(100%, 32rem);
  }

  .auth-form {
    display: grid;
    gap: 1.25rem;
  }
</style>
