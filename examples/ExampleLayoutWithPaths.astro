---
/**
 * Example Layout Component using SPECTRE_CSS_PATHS
 *
 * This demonstrates how to use the SPECTRE_CSS_PATHS constants
 * instead of hardcoding CSS import paths.
 */
import { SPECTRE_CSS_PATHS } from "@phcdevworks/spectre-ui-astro";

interface Props {
  title?: string;
}

const { title = "Spectre UI Astro Example" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href={SPECTRE_CSS_PATHS.base} />
    <link rel="stylesheet" href={SPECTRE_CSS_PATHS.components} />
    <link rel="stylesheet" href={SPECTRE_CSS_PATHS.utilities} />
  </head>
  <body>
    <slot />
  </body>
</html>
