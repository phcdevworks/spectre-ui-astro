---
import { SpButton } from "@phcdevworks/spectre-ui-astro";
import Layout from "./ExampleLayout.astro";
---

<Layout title="SpButton Examples">
  <main class="sp-container sp-stack sp-gap-6">
    <header class="sp-stack">
      <h1>SpButton Examples</h1>
      <p>Quick reference for Spectre UI button variants, sizes, and states.</p>
    </header>

    <section class="sp-stack">
      <h2>Variants</h2>
      <div class="sp-flex sp-flex-wrap sp-gap-3">
        <SpButton variant="primary">Primary</SpButton>
        <SpButton variant="secondary">Secondary</SpButton>
        <SpButton variant="ghost">Ghost</SpButton>
        <SpButton variant="success">Success</SpButton>
        <SpButton variant="danger">Danger</SpButton>
      </div>
    </section>

    <section class="sp-stack">
      <h2>Sizes</h2>
      <div class="sp-flex sp-flex-wrap sp-gap-3">
        <SpButton size="sm">Small</SpButton>
        <SpButton size="md">Medium</SpButton>
        <SpButton size="lg">Large</SpButton>
      </div>
    </section>

    <section class="sp-stack">
      <h2>Links</h2>
      <div class="sp-flex sp-flex-wrap sp-gap-3">
        <SpButton as="a" href="/docs" variant="secondary">
          Internal Link
        </SpButton>
        <SpButton as="a" href="https://example.com" target="_blank" rel="noreferrer">
          External Link
        </SpButton>
      </div>
    </section>

    <section class="sp-stack">
      <h2>Full Width</h2>
      <div class="sp-stack" style="max-width: 320px;">
        <SpButton fullWidth>
          Full Width Button
        </SpButton>
        <SpButton as="a" href="/get-started" fullWidth>
          Full Width Link
        </SpButton>
      </div>
    </section>

    <section class="sp-stack">
      <h2>States</h2>
      <div class="sp-flex sp-flex-wrap sp-gap-3">
        <SpButton loading>
          Loading Button
        </SpButton>
        <SpButton as="a" href="/status" loading>
          Loading Link
        </SpButton>
        <SpButton disabled>
          Disabled Button
        </SpButton>
        <SpButton as="a" href="/status" disabled>
          Disabled Link
        </SpButton>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    max-width: 960px;
    margin: 0 auto;
    padding: 2rem;
  }
</style>
