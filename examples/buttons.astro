---
import { SpButton } from "@phcdevworks/spectre-ui-astro";
import Layout from "./ExampleLayout.astro";
---

<Layout title="SpButton Examples">
  <main class="button-page">
    <header class="stack">
      <h1>SpButton Examples</h1>
      <p>Quick reference for Spectre UI button variants, sizes, and states.</p>
    </header>

    <section class="stack">
      <h2>Variants</h2>
      <div class="row">
        <SpButton variant="primary">Primary</SpButton>
        <SpButton variant="secondary">Secondary</SpButton>
        <SpButton variant="ghost">Ghost</SpButton>
        <SpButton variant="danger">Danger</SpButton>
      </div>
    </section>

    <section class="stack">
      <h2>Sizes</h2>
      <div class="row">
        <SpButton size="sm">Small</SpButton>
        <SpButton size="md">Medium</SpButton>
        <SpButton size="lg">Large</SpButton>
      </div>
    </section>

    <section class="stack">
      <h2>Links</h2>
      <div class="row">
        <SpButton as="a" href="/docs" variant="secondary">
          Internal Link
        </SpButton>
        <SpButton
          as="a"
          href="https://example.com"
          target="_blank"
          rel="noreferrer"
        >
          External Link
        </SpButton>
      </div>
    </section>

    <section class="stack">
      <h2>Full Width</h2>
      <div class="full-width-demo">
        <SpButton fullWidth> Full Width Button </SpButton>
        <SpButton as="a" href="/get-started" fullWidth>
          Full Width Link
        </SpButton>
      </div>
    </section>

    <section class="stack">
      <h2>States</h2>
      <div class="row">
        <SpButton loading> Loading Button </SpButton>
        <SpButton as="a" href="/status" loading> Loading Link </SpButton>
        <SpButton disabled> Disabled Button </SpButton>
        <SpButton as="a" href="/status" disabled> Disabled Link </SpButton>
      </div>
    </section>
  </main>
</Layout>

<style>
  .button-page {
    max-width: 960px;
    margin: 0 auto;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .stack {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .full-width-demo {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    max-width: 320px;
  }
</style>
