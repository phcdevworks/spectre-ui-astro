---
import BaseLayout from "../layouts/BaseLayout.astro";
import {
  SpButton,
  SpCard,
  SpInput,
  getButtonClasses,
} from "@phcdevworks/spectre-ui-astro";

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/buttons", label: "Buttons" },
  { href: "/forms", label: "Forms" },
  { href: "/marketing", label: "Marketing" },
  { href: "/primitives", label: "Primitives" },
];

const navLinkClasses = getButtonClasses({ variant: "secondary", size: "sm" });
---

<BaseLayout title="Forms — Spectre UI Astro">
  <div class="sp-stack page">
    <nav class="sp-hstack nav">
      {navLinks.map((link) => (
        <a class={navLinkClasses} href={link.href}>{link.label}</a>
      ))}
    </nav>

    <header class="sp-stack header">
      <div class="sp-stack">
        <p class="eyebrow">Spectre Examples</p>
        <h1>Forms</h1>
        <p class="subtitle">
          Input states, sizes, and a composed form built with Spectre primitives.
        </p>
      </div>
    </header>

    <section class="grid two">
      <SpCard variant="flat" class="sp-stack">
        <h2>Input States</h2>
        <SpInput
          label="Email"
          type="email"
          placeholder="you@example.com"
          helperText="We'll never share your email."
        />
        <SpInput
          label="Display Name"
          value="Spectre User"
          state="success"
          helperText="Looks good!"
        />
        <SpInput
          label="Password"
          type="password"
          state="error"
          errorMessage="Password must be at least 8 characters."
        />
        <SpInput
          label="API Key"
          type="text"
          value="••••••••••••••••"
          state="disabled"
          disabled
        />
      </SpCard>

      <SpCard variant="flat" class="sp-stack">
        <h2>Sizes</h2>
        <SpInput label="Small" size="sm" placeholder="sm input" />
        <SpInput label="Medium" size="md" placeholder="md input" />
        <SpInput label="Large" size="lg" placeholder="lg input" />
      </SpCard>
    </section>

    <section class="sp-stack">
      <h2>Card Form</h2>
      <SpCard variant="elevated" class="sp-stack">
        <form class="stack" style="margin: 0;">
          <SpInput label="Full Name" name="fullName" placeholder="Jane Doe" required />
          <SpInput label="Work Email" type="email" name="email" placeholder="you@company.com" required />
          <SpInput
            label="Phone"
            type="tel"
            name="phone"
            placeholder="+1 (555) 123-4567"
            helperText="Optional"
          />
          <div class="inline">
            <SpButton variant="primary" type="submit">Submit</SpButton>
            <SpButton variant="ghost" type="reset">Reset</SpButton>
          </div>
        </form>
      </SpCard>
    </section>
  </div>
</BaseLayout>

<style>
  .page {
    gap: var(--sp-layout-section-gap-lg);
    width: min(1000px, 100%);
  }

  .nav {
    display: flex;
    gap: var(--sp-layout-stack-gap-sm);
    flex-wrap: wrap;
  }

  .header {
    display: flex;
    flex-direction: column;
    gap: var(--sp-layout-stack-gap-sm);
  }

  .eyebrow {
    letter-spacing: 0.08em;
    text-transform: uppercase;
    font-weight: 600;
    font-size: var(--sp-font-xs-size);
    color: var(--sp-text-on-page-muted);
    margin: 0;
  }

  .subtitle {
    margin: 0;
    color: var(--sp-text-on-page-muted);
    max-width: 60ch;
  }

  .grid {
    display: grid;
    gap: var(--sp-layout-stack-gap-md);
  }

  .grid.two {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .stack {
    display: flex;
    flex-direction: column;
    gap: var(--sp-layout-stack-gap-md);
  }

  .inline {
    display: flex;
    gap: var(--sp-layout-stack-gap-sm);
    flex-wrap: wrap;
  }
</style>
