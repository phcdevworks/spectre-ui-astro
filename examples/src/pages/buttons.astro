---
import {
  SpBadge,
  SpButton,
  SpCard,
  SpIconBox,
  getButtonClasses,
} from "@phcdevworks/spectre-ui-astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/buttons", label: "Buttons" },
  { href: "/forms", label: "Forms" },
  { href: "/marketing", label: "Marketing" },
  { href: "/primitives", label: "Primitives" },
];

const navLinkClasses = getButtonClasses({ variant: "secondary", size: "sm" });
---

<BaseLayout title="Buttons â€” Spectre UI Astro">
  <div class="sp-stack page">
    <nav class="sp-hstack nav">
      {
        navLinks.map((link) => (
          <a class={navLinkClasses} href={link.href}>
            {link.label}
          </a>
        ))
      }
    </nav>

    <header class="sp-stack header">
      <div class="sp-stack">
        <p class="eyebrow">Spectre Examples</p>
        <h1>Buttons</h1>
        <p class="subtitle">
          Variants, sizes, states, and composition with Spectre button
          primitives.
        </p>
      </div>
    </header>

    <section class="sp-stack grid two">
      <SpCard variant="flat" class="sp-stack">
        <h2>Variants</h2>
        <div class="sp-hstack inline">
          <SpButton variant="primary">Primary</SpButton>
          <SpButton variant="secondary">Secondary</SpButton>
          <SpButton variant="ghost">Ghost</SpButton>
          <SpButton variant="success">Success</SpButton>
          <SpButton variant="danger">Danger</SpButton>
        </div>
      </SpCard>

      <SpCard variant="flat" class="sp-stack">
        <h2>Sizes</h2>
        <div class="sp-hstack inline">
          <SpButton variant="primary" size="sm">Small</SpButton>
          <SpButton variant="primary" size="md">Medium</SpButton>
          <SpButton variant="primary" size="lg">Large</SpButton>
        </div>
      </SpCard>
    </section>

    <section class="sp-stack grid two">
      <SpCard variant="flat" class="sp-stack">
        <h2>States</h2>
        <div class="sp-hstack inline">
          <SpButton variant="primary" loading>Loading</SpButton>
          <SpButton variant="secondary" disabled>Disabled</SpButton>
          <SpButton variant="danger" loading disabled>Loading Disabled</SpButton
          >
        </div>
      </SpCard>

      <SpCard variant="flat" class="sp-stack">
        <h2>Icon Buttons</h2>
        <div class="sp-hstack inline">
          <SpButton variant="ghost" iconOnly aria-label="Play">
            <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
              <path fill="currentColor" d="M8 5v14l11-7z"></path>
            </svg>
          </SpButton>
          <SpButton variant="primary" iconOnly aria-label="Download">
            <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
              <path
                fill="currentColor"
                d="M11 5h2v8l3-3 1 1-5 5-5-5 1-1 3 3zM5 19h14v2H5z"></path>
            </svg>
          </SpButton>
          <SpButton variant="danger" iconOnly aria-label="Delete" size="sm">
            <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
              <path
                fill="currentColor"
                d="M9 3h6l1 2h4v2H4V5h4zm2 7v6h2v-6zm-4 0h2v6H7zm8 0h2v6h-2z"
              ></path>
            </svg>
          </SpButton>
        </div>
      </SpCard>
    </section>

    <section class="sp-stack">
      <h2>Cards with Buttons</h2>
      <div class="card-row">
        <SpCard variant="elevated">
          <h3 class="card-title">Project Alpha</h3>
          <p>Track delivery, approvals, and timelines with quick actions.</p>
          <div class="inline">
            <SpButton variant="primary" size="sm">Open</SpButton>
            <SpButton variant="ghost" size="sm">Details</SpButton>
          </div>
        </SpCard>

        <SpCard variant="outline">
          <h3 class="card-title">Security Review</h3>
          <p>Pending approvals. Requires your sign-off to proceed.</p>
          <div class="inline">
            <SpButton variant="success" size="sm">Approve</SpButton>
            <SpButton variant="danger" size="sm">Reject</SpButton>
          </div>
        </SpCard>

        <SpCard variant="ghost">
          <h3 class="card-title">Integrations</h3>
          <p>Connect external services to sync data into your workspace.</p>
          <div class="inline">
            <SpButton variant="secondary" size="sm">Manage</SpButton>
            <SpButton variant="ghost" size="sm">Docs</SpButton>
          </div>
        </SpCard>
      </div>
    </section>

    <section class="sp-stack">
      <h2>Buttons + Primitives</h2>
      <div class="sp-hstack inline align-center">
        <SpButton variant="primary">Notify</SpButton>
        <SpBadge variant="warning">Beta</SpBadge>
        <SpIconBox variant="primary" size="sm" aria-hidden="true">
          <svg class="icon" viewBox="0 0 24 24">
            <path
              fill="currentColor"
              d="M12 2 2 7l10 5 10-5zm-7.5 9.5L12 17l7.5-5.5V17L12 22 4.5 17z"
            ></path>
          </svg>
        </SpIconBox>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .page {
    gap: var(--sp-layout-section-gap-lg);
    width: min(1100px, 100%);
  }

  .nav {
    display: flex;
    gap: var(--sp-layout-stack-gap-sm);
    flex-wrap: wrap;
  }

  .header {
    display: flex;
    flex-direction: column;
    gap: var(--sp-layout-stack-gap-sm);
  }

  .eyebrow {
    letter-spacing: 0.08em;
    text-transform: uppercase;
    font-weight: 600;
    font-size: var(--sp-font-xs-size);
    color: var(--sp-text-on-page-muted);
    margin: 0;
  }

  .subtitle {
    margin: 0;
    color: var(--sp-text-on-page-muted);
    max-width: 60ch;
  }

  .grid {
    display: grid;
    gap: var(--sp-layout-stack-gap-md);
  }

  .grid.two {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .inline {
    display: flex;
    gap: var(--sp-layout-stack-gap-sm);
    flex-wrap: wrap;
    align-items: center;
  }

  .align-center {
    align-items: center;
  }

  .card-row {
    display: grid;
    gap: var(--sp-layout-stack-gap-md);
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  }

  .card-title {
    margin-top: 0;
  }

  .icon {
    width: 1em;
    height: 1em;
  }
</style>
