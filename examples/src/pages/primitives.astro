---
import {
  SpBadge,
  SpCard,
  SpIconBox,
  getButtonClasses,
} from "@phcdevworks/spectre-ui-astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/buttons", label: "Buttons" },
  { href: "/forms", label: "Forms" },
  { href: "/marketing", label: "Marketing" },
  { href: "/primitives", label: "Primitives" },
];

const navLinkClasses = getButtonClasses({ variant: "secondary", size: "sm" });
---

<BaseLayout title="Primitives â€” Spectre UI Astro">
  <div class="sp-stack page">
    <nav class="sp-hstack nav">
      {
        navLinks.map((link) => (
          <a class={navLinkClasses} href={link.href}>
            {link.label}
          </a>
        ))
      }
    </nav>

    <header class="sp-stack header">
      <div class="sp-stack">
        <p class="eyebrow">Spectre Examples</p>
        <h1>Primitives</h1>
        <p class="subtitle">Badge and IconBox variants and sizes.</p>
      </div>
    </header>

    <section class="grid">
      <SpCard variant="flat" class="sp-stack">
        <h2>Badge Variants</h2>
        <div class="sp-hstack inline">
          <SpBadge variant="primary">Primary</SpBadge>
          <SpBadge variant="success">Success</SpBadge>
          <SpBadge variant="warning">Warning</SpBadge>
          <SpBadge variant="danger">Danger</SpBadge>
        </div>
      </SpCard>

      <SpCard variant="flat" class="sp-stack">
        <h2>Badge Sizes</h2>
        <div class="sp-hstack inline">
          <SpBadge variant="primary" size="sm">Small</SpBadge>
          <SpBadge variant="primary" size="md">Medium</SpBadge>
          <SpBadge variant="primary" size="lg">Large</SpBadge>
        </div>
      </SpCard>
    </section>

    <section class="grid">
      <SpCard variant="flat" class="sp-stack">
        <h2>IconBox Variants</h2>
        <div class="sp-hstack inline">
          <SpIconBox variant="primary" size="md" aria-hidden="true">
            <svg class="icon" viewBox="0 0 24 24">
              <path fill="currentColor" d="M5 3h14l-1.5 13h-11z"></path>
            </svg>
          </SpIconBox>
          <SpIconBox variant="success" size="md" aria-hidden="true">
            <svg class="icon" viewBox="0 0 24 24">
              <path
                fill="currentColor"
                d="M9 16.2 4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4z"></path>
            </svg>
          </SpIconBox>
          <SpIconBox variant="warning" size="md" aria-hidden="true">
            <svg class="icon" viewBox="0 0 24 24">
              <path fill="currentColor" d="M11 15h2v2h-2zm0-8h2v6h-2z"></path>
            </svg>
          </SpIconBox>
          <SpIconBox variant="danger" size="md" aria-hidden="true">
            <svg class="icon" viewBox="0 0 24 24">
              <path fill="currentColor" d="M12 2 2 22h20z"></path>
            </svg>
          </SpIconBox>
          <SpIconBox variant="info" size="md" aria-hidden="true">
            <svg class="icon" viewBox="0 0 24 24">
              <path fill="currentColor" d="M11 9h2v10h-2zm0-4h2v2h-2z"></path>
            </svg>
          </SpIconBox>
        </div>
      </SpCard>

      <SpCard variant="flat" class="sp-stack">
        <h2>IconBox Sizes</h2>
        <div class="sp-hstack inline">
          <SpIconBox variant="primary" size="sm" aria-hidden="true">
            <svg class="icon" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="6" fill="currentColor"></circle>
            </svg>
          </SpIconBox>
          <SpIconBox variant="primary" size="md" aria-hidden="true">
            <svg class="icon" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="6" fill="currentColor"></circle>
            </svg>
          </SpIconBox>
          <SpIconBox variant="primary" size="lg" aria-hidden="true">
            <svg class="icon" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="6" fill="currentColor"></circle>
            </svg>
          </SpIconBox>
        </div>
      </SpCard>
    </section>
  </div>
</BaseLayout>

<style>
  .page {
    gap: var(--sp-layout-section-gap-lg);
    width: min(960px, 100%);
  }

  .nav {
    display: flex;
    gap: var(--sp-layout-stack-gap-sm);
    flex-wrap: wrap;
  }

  .header {
    display: flex;
    flex-direction: column;
    gap: var(--sp-layout-stack-gap-sm);
  }

  .eyebrow {
    letter-spacing: 0.08em;
    text-transform: uppercase;
    font-weight: 600;
    font-size: var(--sp-font-xs-size);
    color: var(--sp-text-on-page-muted);
    margin: 0;
  }

  .subtitle {
    margin: 0;
    color: var(--sp-text-on-page-muted);
    max-width: 60ch;
  }

  .grid {
    display: grid;
    gap: var(--sp-layout-stack-gap-md);
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .inline {
    display: flex;
    gap: var(--sp-layout-stack-gap-sm);
    flex-wrap: wrap;
    align-items: center;
  }

  .icon {
    width: 1em;
    height: 1em;
  }
</style>
