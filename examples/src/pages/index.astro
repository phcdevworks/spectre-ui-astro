---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SpButton, SpCard, SpInput } from "@phcdevworks/spectre-ui-astro";
---

<BaseLayout>
  <div class="page">
    <header class="page__header">
      <div>
        <p class="eyebrow">Spectre UI for Astro</p>
        <h1>Build better websites faster</h1>
        <p class="subtitle">
          A design system integration that brings Spectre UI components to your
          Astro projects.
        </p>
      </div>
      <SpButton variant="primary" size="lg"> Get Started </SpButton>
    </header>

    <section class="demo-section">
      <h2>Components</h2>
      <div class="component-grid">
        <SpCard variant="elevated">
          <h3>Buttons</h3>
          <p>
            Flexible button components with multiple variants, sizes, and
            states.
          </p>
          <div class="button-demo">
            <SpButton variant="primary" size="sm">Primary</SpButton>
            <SpButton variant="secondary" size="sm">Secondary</SpButton>
            <SpButton variant="ghost" size="sm">Ghost</SpButton>
          </div>
        </SpCard>

        <SpCard variant="elevated">

        </SpCard>

        <SpCard variant="elevated">
          <h3>Inputs</h3>
          <p>Form controls with labels, validation states, and helper text.</p>
          <div class="input-demo">
            <SpInput
              label="Email"
              type="email"
              placeholder="you@example.com"
              helperText="We'll never share your email."
            />
          </div>
        </SpCard>
      </div>
    </section>

    <section class="demo-section">
      <h2>Try it out</h2>
      <SpCard variant="base" class="contact-card">
        <h3>Contact Form</h3>
        <form class="contact-form">
          <SpInput label="Name" type="text" placeholder="Your name" required />

          <SpInput
            label="Email"
            type="email"
            placeholder="you@example.com"
            required
          />

          <SpInput
            label="Message"
            type="text"
            placeholder="Tell us what you think"
          />

          <div class="form-actions">
            <SpButton variant="primary" type="submit"> Send Message </SpButton>
            <SpButton variant="ghost" type="button">Cancel</SpButton>
          </div>
        </form>
      </SpCard>
    </section>
  </div>
</BaseLayout>

<style>
  .page {
    width: min(100%, 72rem);
    display: grid;
    gap: 3rem;
  }

  .page__header {
    display: grid;
    gap: 1.5rem;
    text-align: center;
    padding: 2rem 0;
  }

  .page__header h1 {
    margin: 0.5rem 0 0;
    font-size: 2.5rem;
  }

  .subtitle {
    font-size: 1.125rem;
    color: #cbd5f5;
    margin: 0.5rem 0 1rem;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin: 0;
    font-size: 0.85rem;
    color: #cbd5f5;
  }

  .demo-section {
    display: grid;
    gap: 1.5rem;
  }

  .demo-section h2 {
    margin: 0;
  }

  .component-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .component-grid h3 {
    margin: 0 0 0.5rem;
  }

  .component-grid p {
    margin: 0 0 1rem;
    color: #cbd5f5;
  }

  .button-demo {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .input-demo {
    margin-top: 1rem;
  }

  .contact-card {
    max-width: 42rem;
  }

  .contact-card h3 {
    margin: 0 0 1rem;
  }

  .contact-form {
    display: grid;
    gap: 1.25rem;
  }

  .form-actions {
    display: flex;
    gap: 0.75rem;
    padding-top: 0.5rem;
  }
</style>
