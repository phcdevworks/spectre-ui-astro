---
import {
  SpBadge,
  SpButton,
  SpCard,
  SpIconBox,
  SpInput,
} from "@phcdevworks/spectre-ui-astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="sp-stack page">
    <header class="hero">
      <div class="sp-stack hero-text">
        <p class="eyebrow">Spectre UI for Astro</p>
        <h1>Build better websites faster</h1>
        <p class="subtitle">
          A design system integration that brings Spectre UI components to your
          Astro projects.
        </p>
      </div>
      <SpButton variant="primary" size="lg">Get Started</SpButton>
    </header>

    <section class="demo-section">
      <h2>Components</h2>

      <div class="component-grid">
        <SpCard variant="elevated">
          <h3>Buttons</h3>
          <p>
            Flexible button components with multiple variants, sizes, and
            states.
          </p>
          <div class="sp-hstack demo-row">
            <SpButton variant="primary" size="sm">Primary</SpButton>
            <SpButton variant="secondary" size="sm">Secondary</SpButton>
            <SpButton variant="ghost" size="sm">Ghost</SpButton>
          </div>
        </SpCard>

        <SpCard variant="elevated">
          <div class="sp-hstack card-header">
            <SpIconBox variant="primary" size="md">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <rect width="7" height="7" x="3" y="3" rx="1"></rect>
                <rect width="7" height="7" x="14" y="3" rx="1"></rect>
                <rect width="7" height="7" x="14" y="14" rx="1"></rect>
                <rect width="7" height="7" x="3" y="14" rx="1"></rect>
              </svg>
            </SpIconBox>
            <div>
              <h3>Cards <SpBadge variant="primary" size="sm">New</SpBadge></h3>
            </div>
          </div>
          <p>
            Use cards to group related UI content. Cards automatically adapt to
            Spectre's surface and text tokens for proper contrast.
          </p>
          <div class="sp-hstack demo-row">
            <SpButton variant="primary" size="sm">Example CTA</SpButton>
          </div>
        </SpCard>

        <SpCard variant="elevated">
          <div class="sp-hstack card-header">
            <SpIconBox variant="success" size="md">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="m3 17 2 2 4-4"></path>
                <path d="m3 7 2 2 4-4"></path>
                <path d="M13 6h8"></path>
                <path d="M13 12h8"></path>
                <path d="M13 18h8"></path>
              </svg>
            </SpIconBox>
            <div>
              <h3>Inputs</h3>
            </div>
          </div>
          <p>Form controls with labels, validation states, and helper text.</p>
          <div class="input-demo">
            <SpInput
              label="Email"
              type="email"
              placeholder="you@example.com"
              helperText="We'll never share your email."
            />
          </div>
        </SpCard>
      </div>
    </section>

    <section class="demo-section">
      <h2>Badges & Icons</h2>
      <div class="component-grid">
        <SpCard variant="elevated">
          <h3>Badges</h3>
          <p>Display status, labels, or counts with different variants.</p>
          <div class="sp-hstack demo-row">
            <SpBadge variant="primary">Primary</SpBadge>
            <SpBadge variant="success">Success</SpBadge>
            <SpBadge variant="warning">Warning</SpBadge>
            <SpBadge variant="danger">Danger</SpBadge>
            <SpBadge variant="primary" size="sm">Small</SpBadge>
            <SpBadge variant="primary" size="lg">Large</SpBadge>
          </div>
        </SpCard>

        <SpCard variant="elevated">
          <h3>Icon Boxes</h3>
          <p>Decorative containers for icons with multiple styles.</p>
          <div class="sp-hstack demo-row iconbox-row">
            <SpIconBox variant="primary" size="md">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M12 2v20M2 12h20"></path>
              </svg>
            </SpIconBox>
            <SpIconBox variant="success" size="md">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M20 6 9 17l-5-5"></path>
              </svg>
            </SpIconBox>
            <SpIconBox variant="danger" size="md">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M18 6 6 18M6 6l12 12"></path>
              </svg>
            </SpIconBox>
            <SpIconBox variant="info" size="md">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 16v-4M12 8h.01"></path>
              </svg>
            </SpIconBox>
          </div>
        </SpCard>
      </div>
    </section>

    <section class="demo-section">
      <h2>Try it out</h2>
      <SpCard variant="elevated" class="contact-card">
        <h3>Contact Form</h3>
        <form class="contact-form">
          <SpInput label="Name" type="text" placeholder="Your name" required />

          <SpInput
            label="Email"
            type="email"
            placeholder="you@example.com"
            required
          />

          <SpInput
            label="Message"
            type="text"
            placeholder="Tell us what you think"
          />

          <div class="sp-hstack form-actions">
            <SpButton variant="primary" type="submit">Send Message</SpButton>
            <SpButton variant="ghost" type="button">Cancel</SpButton>
          </div>
        </form>
      </SpCard>
    </section>
  </div>
</BaseLayout>

<style>
  .page {
    gap: var(--sp-layout-section-gap-lg);
    max-width: 1100px;
  }

  .hero {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--sp-layout-section-gap-md);
    flex-wrap: wrap;
  }

  .hero-text {
    max-width: 56ch;
  }

  .eyebrow {
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-weight: 600;
    font-size: var(--sp-font-xs-size);
    color: var(--sp-text-on-page-muted);
    margin: 0;
  }

  .subtitle {
    margin: 0.35rem 0 0;
    color: var(--sp-text-on-page-muted);
    max-width: 60ch;
    line-height: var(--sp-font-md-line-height);
  }

  .demo-section {
    display: flex;
    flex-direction: column;
    gap: var(--sp-layout-stack-gap-md);
  }

  .component-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: var(--sp-layout-stack-gap-md);
  }

  .demo-row {
    display: flex;
    flex-wrap: wrap;
    gap: var(--sp-layout-stack-gap-sm);
    margin-top: var(--sp-layout-stack-gap-sm);
  }

  .iconbox-row {
    gap: var(--sp-layout-stack-gap-md);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: var(--sp-layout-stack-gap-sm);
    margin-bottom: var(--sp-layout-stack-gap-sm);
  }

  .card-header h3 {
    margin: 0;
    display: flex;
    align-items: center;
    gap: var(--sp-layout-stack-gap-sm);
  }

  .input-demo {
    max-width: 340px;
  }

  .contact-card {
    max-width: 640px;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--sp-layout-stack-gap-md);
    margin-top: var(--sp-layout-stack-gap-md);
  }

  .form-actions {
    gap: var(--sp-layout-stack-gap-sm);
  }
</style>
