---
import { SPECTRE_UI_CSS } from "@phcdevworks/spectre-ui-astro";

interface Props {
  title?: string;
}

const { title = "Spectre UI Astro Example" } = Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href={SPECTRE_UI_CSS} />

  </head>

  <body>
    <main class="sp-container sp-section">
      <slot />
    </main>
  </body>
</html>
