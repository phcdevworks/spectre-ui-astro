---
import {
  getCardClasses,
  type CardVariant,
  type CardRecipeOptions,
} from "@phcdevworks/spectre-ui";

export interface SpCardProps extends CardRecipeOptions {
  class?: string;
  as?: "div" | "section" | "article";
  [key: string]: any;
}

const {
  variant = "elevated",
  interactive = false,
  padded = false,
  fullHeight = false,
  class: extraClass = "",
  as = "div",
  ...rest
} = Astro.props as SpCardProps;

const baseClasses = getCardClasses({
  variant,
  interactive,
  padded,
  fullHeight,
});

const classes = [baseClasses, extraClass].filter(Boolean).join(" ");
---

{as === "section" && (
  <section class={classes} {...rest}>
    <slot />
  </section>
)}

{as === "article" && (
  <article class={classes} {...rest}>
    <slot />
  </article>
)}

{as === "div" && (
  <div class={classes} {...rest}>
    <slot />
  </div>
)}
