---
import { getCardClasses, type CardVariant } from "@phcdevworks/spectre-ui";

export interface SpCardProps {
  variant?: CardVariant;
  class?: string;
  as?: "div" | "section" | "article";
  [key: string]: any;
}

const {
  variant = "elevated",
  class: extraClass = "",
  as = "div",
  ...rest
} = Astro.props as SpCardProps;

const classes = [getCardClasses({ variant }), extraClass].filter(Boolean).join(
  " "
);

const Element = as;
---

<Element class={classes} {...rest}>
  <slot />
</Element>
