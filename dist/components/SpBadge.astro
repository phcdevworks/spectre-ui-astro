---
import { getBadgeClasses } from "@phcdevworks/spectre-ui";
import type { BadgeVariant, BadgeSize } from "@phcdevworks/spectre-ui";

interface SpBadgeProps {
  variant?: BadgeVariant;
  size?: BadgeSize;
  class?: string;
  [key: string]: any;
}

const {
  variant,
  size,
  class: className,
  ...attrs
} = Astro.props as SpBadgeProps;

const classes = getBadgeClasses({ variant, size, className } as any);
const finalClass = className ? [classes, className].filter(Boolean).join(" ") : classes;
---

<span class={finalClass} {...attrs}>
  <slot />
</span>
